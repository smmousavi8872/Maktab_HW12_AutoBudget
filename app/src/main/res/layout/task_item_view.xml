<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_centerVertical="true"
  android:layout_marginStart="10dp"
  android:layout_marginTop="7dp"
  android:layout_marginEnd="10dp"
  android:layout_marginBottom="7dp"
  app:cardBackgroundColor="#eee"
  app:cardCornerRadius="7dp"
  app:cardElevation="2dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp">


    <ImageView
      android:id="@+id/list_item_bell"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/txt_list_item_title"
      android:layout_toStartOf="@+id/txt_list_item_title"
      android:alpha=".7"
      android:background="@drawable/ic_bell"/>


    <TextView
      android:id="@+id/txt_list_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="5dp"
      android:drawablePadding="5dp"
      android:gravity="center_vertical"
      android:layoutDirection="rtl"
      android:text="پرداخت قسط بانک"
      android:textColor="#000"
      android:textSize="17dp"/>


    <ImageView
      android:id="@+id/list_item_star"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/txt_list_item_title"
      android:layout_toStartOf="@id/list_item_bell"
      android:alpha=".7"
      android:background="@drawable/ic_black_star"/>

    <TextView
      android:id="@+id/txt_list_item_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txt_list_item_title"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="3dp"
      android:drawablePadding="5dp"
      android:layoutDirection="rtl"
      android:text="زمان و تاریخ ثبت نشده است"
      android:textColor="@color/genera_turquoise_color"
      android:textSize="14dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:alpha=".7"
      android:drawableStart="@drawable/ic_done_check"/>

    <Button
      android:id="@+id/btn_list_item_done"
      android:layout_width="70dp"
      android:layout_height="35dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="10dp"
      android:background="@drawable/login_button_style"
      android:gravity="center"
      android:text="انجام شد"
      android:textColor="#fff"
      android:textSize="13dp"/>

  </RelativeLayout>
</androidx.cardview.widget.CardView>