<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".mvc.controller.fragments.ExpenseReportFragment">

  <com.google.android.material.tabs.TabLayout
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:tabIndicatorColor="@color/general_violet_color"
    app:tabSelectedTextColor="@color/general_violet_color"
    app:tabTextAppearance="@style/tablayout_text_size"
    app:tabTextColor="#aaa">


  </com.google.android.material.tabs.TabLayout>

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/view_pager"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

  </androidx.viewpager.widget.ViewPager>

</LinearLayout>